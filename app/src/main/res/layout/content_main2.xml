<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kubeiwu.faceunlock.ui.activity.Main2Activity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/registerFace"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/butshape"
        android:text="注册人脸"
        android:textColor="@color/color_1da4e8"
        android:textSize="20sp" />

    <Button
        android:id="@+id/settheunlockpattern"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/registerFace"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/butshape"
        android:text="设置解锁图案"
        android:textColor="@color/color_1da4e8"
        android:textSize="20sp" />

</RelativeLayout>

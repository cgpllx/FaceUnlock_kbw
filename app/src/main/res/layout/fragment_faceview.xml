<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 锁屏核心功能操作界面自定义ViewGrou的显示 -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp" >

        <me.zhanghai.patternlock.PatternView
            android:id="@+id/pl_pattern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <com.kubeiwu.faceunlock.ui.views.Preview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.kubeiwu.faceunlock.ui.views.Draw
            android:id="@+id/draw"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.kubeiwu.faceunlock.ui.views.Draw>

        <ImageView
            android:id="@+id/spotlight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0.8"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_spotlight" />
    </FrameLayout>

</LinearLayout>